{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Num</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td >{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix_par_jour</th>
                <td>{{ reservation.prixParJour }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}" class="btn btn-link">Retourner à la liste des réservations</a>


{% endblock %}
