{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Détails réservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numéro du réservation</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ reservation.getPkClient().nom }}</td>
            </tr>
            <tr>
                <th>Voiture</th>
                <td>{{ reservation.getPkVoiture().matricule }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix_par_jour</th>
                <td>{{ reservation.prixParJour }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}"class="btn btn-link">Retourner à la liste des réservations</a>


{% endblock %}
